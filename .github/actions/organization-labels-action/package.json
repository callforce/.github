{
  "name": "organziation-labels-action",
  "version": "0.1.0",
  "description": "Maintain repository labels across a GitHub organization from GitHub actions",
  "main": "src/index.js",
  "scripts": {
    "build": "ncc build src",
    "format": "prettier --check \"**/*.js\"",
    "lint": "eslint src/*",
    "start": "nodemon --exec 'prettier --write \"**/*.js\" && eslint src/* && ncc build src/index.js'",
    "test": "jest --passWithNoTests"
  },
  "keywords": [],
  "author": "@callforce",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.2.1",
    "@actions/github": "^2.0.1",
    "@octokit/plugin-retry": "^3.0.1",
    "@octokit/plugin-throttling": "^3.1.0",
    "@octokit/rest": "^16.37.0",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.21.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "README.md",
      ".gitignore"
    ],
    "delay": 1500
  }
}
